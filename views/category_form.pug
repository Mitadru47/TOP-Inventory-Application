extends layout

block content
  h1= title

  form(method='POST')

    div.form-group
      input#title.form-control(type='text', placeholder='Name of category' name='name' required value=(undefined===category ? '' : category.name) )
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
