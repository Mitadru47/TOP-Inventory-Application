extends layout

block content 

    h1= title + ": " + category.name

    if items.length

        p Delete the following item(s) before attempting to delete this category.
        hr

        p 
            each item, index in items
                p 
                    a(href=item.url) #{item.title}
                p #{item.summary}
            
                if index < items.length - 1
                    br|

                //- This adds a <br> after every item associated with the category 
                //- except for the last one.

    else
        hr
        p Do you really want to delete this Category?

        form(method='POST')

            input#categoryid.form-control(type='hidden', name='categoryid', value=category._id )
            p 
                button#deleteButton.btn.btn-primary(type='submit') Delete